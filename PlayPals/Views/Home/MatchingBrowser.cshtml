@{
    ViewData["Title"] = "Matching Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matching Page</title>
    <link rel="stylesheet" href="/css/matching.css">
</head>
<body>
    <div class="container">
        <div class="matches-container">
            <h2>Find Your Friend</h2>
            <button id="browseMatches">Browse Matches</button>
            <div id="matchesList" class="matches-list"></div>
        </div>
    </div>

    <script>
    document.getElementById('browseMatches').addEventListener('click', function() {
        const matchesList = document.getElementById('matchesList');
        matchesList.innerHTML = ''; 

        // Example temperary matches data
        const matches = [
            { id: 1, name: "Alex", interests: "Hiking, Reading" },
            { id: 2, name: "Jordan", interests: "Gaming, Music" },
        ];

        matches.forEach(match => {
            const matchEntry = document.createElement('div');
            matchEntry.classList.add('match-entry');
            matchEntry.innerHTML = `
                <div class="match-info">
                    <h3>${match.name}</h3>
                    <p>Interests: ${match.interests}</p>
                </div>
                <div class="match-actions">
                    <button class="like-btn" onclick="likeMatch(${match.id})">üëçüèª</button>
                    <button class="skip-btn" onclick="skipMatch(${match.id})">‚è≠Ô∏è</button>
                </div>
            `;
            matchesList.appendChild(matchEntry);
        });
    });

    function likeMatch(matchId) {
        console.log(`Liked match with ID: ${matchId}`);
        // Placeholder for like action
    }

    function skipMatch(matchId) {
        console.log(`Skipped match with ID: ${matchId}`);
        // Placeholder for skip action
    }
</script>

</body>
</html>




