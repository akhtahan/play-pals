@{
    ViewData["Title"] = "Chat Box";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
    <div class="container">
        <div class="contacts-list">
            <!-- List of contacts goes here -->
            <ul id="contactList">
                <li onclick="showChat('John')">John</li>
                <li onclick="showChat('Jane')">Jane</li>
                <!-- Add more contacts as needed -->
            </ul>
        </div>
        <div class="chat-container">
            <div class="chat-header">
                <h2 id="selectedContact">Select a contact to chat</h2>
            </div>
            <div class="chat">
                <div id="chatContainer"></div>
                <div class="message-input">
                    <input type="text" id="messageInput" placeholder="Type your message">
                    <button onclick="sendMessage()">Send</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showChat(contactName) {
            const chatContainer = document.getElementById('chatContainer');
            const selectedContactElement = document.getElementById('selectedContact');

            chatContainer.innerHTML = '';

            selectedContactElement.textContent = `Chat with ${contactName}`;

            const initialMessage = document.createElement('div');
            initialMessage.classList.add('message');
            initialMessage.textContent = `Start chatting with ${contactName}!`;
            chatContainer.appendChild(initialMessage);
        }

        function sendMessage() {
            const messageInput = document.getElementById('messageInput');
            const messageText = messageInput.value.trim();

            if (messageText !== '') {
                const messageElement = document.createElement('div');
                messageElement.classList.add('message');
                messageElement.textContent = messageText;

                const chatContainer = document.getElementById('chatContainer');
                chatContainer.appendChild(messageElement);

                messageInput.value = '';
            }
        }
    </script>
</body>
</html>
